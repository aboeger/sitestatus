<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Contact</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Website</th>
      <th>Status</th>
      <% if destroy %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.company_name, company %></td>
        <td><%= company.contact %></td>
        <td><%= phone_number_format(company.phone) %></td>
        <td><%= company.address %></td>
        <td><%= company.website %></td>
        <td><%= status_color(company.website_status) %></td>
        <% if destroy %>
          <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
